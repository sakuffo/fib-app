{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "sakuffo/fib-client:latest",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "sakuffo/fib-server:latest",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "sakuffo/fib-worker:latest",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "nginx:latest",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "links": [
        "client",
        "server"
      ]
    }
  ]
}